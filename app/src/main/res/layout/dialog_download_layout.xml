<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bevietnampro_bold"
            android:gravity="center"
            android:text="Bạn cần xem 1 quảng cáo ngắn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/bevietnampro_regular"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque ut sapien elit." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_dialog"
            android:fontFamily="@font/bevietnampro_bold"
            android:padding="15dp"
            android:text="Xem quảng cáo"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@drawable/bg_button_dialog_no"
            android:fontFamily="@font/bevietnampro_bold"
            android:padding="15dp"
            android:text="Không, cảm ơn" />

    </LinearLayout>
</androidx.cardview.widget.CardView>