<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <!-- Thiết lập màu nền cho TabLayout -->
        <item name="android:background">@color/white</item>
        <!-- Thiết lập màu chữ cho Tab -->
        <item name="tabTextColor">@color/black</item>
        <!-- Thiết lập màu chữ cho Tab được chọn -->
        <item name="tabSelectedTextColor">#B3B3B3</item>
        <!-- Thiết lập kích thước chữ cho Tab -->
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <!-- Các thuộc tính khác có thể được thiết lập tùy theo nhu cầu của bạn -->
    </style>

    <!-- Style cho văn bản trong Tab -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <!-- Thiết lập kích thước chữ -->
        <item name="android:textSize">14sp</item>
        <!-- Các thuộc tính khác có thể được thiết lập tùy theo nhu cầu của bạn -->
    </style>
</resources>