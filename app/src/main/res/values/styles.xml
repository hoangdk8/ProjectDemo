<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <!-- Thiết lập màu nền cho TabLayout -->
        <item name="android:background">@color/white</item>
        <!-- Thiết lập màu chữ cho Tab -->
        <item name="tabTextColor">#B3B3B3</item>
        <!-- Thiết lập màu chữ cho Tab được chọn -->
        <item name="tabSelectedTextColor">@color/black</item>
        <!-- Thiết lập kích thước chữ cho Tab -->
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <!-- Style cho văn bản trong Tab -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <!-- Thiết lập kích thước chữ -->
        <item name="android:textSize">14sp</item>
        <!-- Các thuộc tính khác có thể được thiết lập tùy theo nhu cầu của bạn -->
    </style>

    <style name="circle">
        <item name="cornerSize">20%</item>
    </style>
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false </item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
    </style>
    <style name="AdsAppTheme" parent="Theme.AppCompat.Light"/>
    <style name="AppTheme.Ads" parent="@style/AdsAppTheme">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/ads_icon</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">15.0px</item>
        <item name="android:minHeight">15.0px</item>
        <item name="android:text">Ad</item>
    </style>
</resources>